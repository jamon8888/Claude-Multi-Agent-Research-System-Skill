{
    "PostToolUse": [
        {
            "condition": "toolName === 'Task' && args.subagent_type === 'researcher'",
            "hooks": [
                {
                    "type": "log",
                    "message": "üî¨ Researcher spawned: {{args.description}}"
                }
            ]
        },
        {
            "condition": "toolName === 'Write' && args.file?.includes('reports/')",
            "hooks": [
                {
                    "type": "log",
                    "message": "üìä Report generated: {{args.file}}"
                }
            ]
        },
        {
            "condition": "toolName === 'Task' && args.subagent_type === 'report-writer'",
            "hooks": [
                {
                    "type": "log",
                    "message": "üìù Synthesis started: Report-writer agent activated"
                }
            ]
        }
    ],
    "PreSkillActivation": [
        {
            "condition": "skillName === 'multi-agent-researcher'",
            "hooks": [
                {
                    "type": "command",
                    "command": "mkdir -p files/research_notes files/reports"
                },
                {
                    "type": "log",
                    "message": "üöÄ Multi-agent research skill activated"
                },
                {
                    "type": "command",
                    "command": "if [ -z \"$EXA_API_KEY\" ] || [ -z \"$TAVILY_API_KEY\" ] || [ -z \"$BRAVE_API_KEY\" ] || [ -z \"$PERPLEXITY_API_KEY\" ]; then echo '‚ö†Ô∏è  MCP API keys not fully configured. Run: /setup-mcp-keys'; fi"
                }
            ]
        }
    ]
}